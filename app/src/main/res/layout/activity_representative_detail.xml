<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Representative_detail"
    android:background="@color/white"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbarsales"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                app:tint="@color/black"
                android:onClick="backpress"/>

            <TextView
                android:id="@+id/not_signin"
                fontPath="fonts/gothambold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_mono"
                android:text="Detail"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="visible"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbarsales"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/union_bank_of_india"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>